{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2020",
    "module": "NodeNext",           
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": true,
    "paths": {
      "@shared/*": ["../shared/src/*"]
    }
  },
  "include": ["src", "src/middleware/authMiddleware.tss"],
  "exclude": ["node_modules"],
  "references": [{ "path": "../shared" }]
}
